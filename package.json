{
  "name": "aura_explorer",
  "version": "1.0.3",
  "description": "Aura explorer used to explore Salesforce Aura Components",
  "scripts": {
    "test": "./node_modules/mocha/bin/mocha --compilers js:babel-core/register test",
    "pkg": "./node_modules/.bin/babel-node  src/backend/app.js",
    "start": "npm install --production; nw .",
    "start_server": "./node_modules/.bin/babel-node  ./bin/www",
    "clean": "rm -rf public/* aura-master master.zip node_modules/*",
    "clean_public": "rm -rf public/*",
    "dev": "gulp dev;",
    "get_aura_upstream": "curl -sLOk https://github.com/forcedotcom/aura/archive/master.zip && (tar -xf master.zip || unzip master.zip)",
    "build": "npm run clean; npm run get_aura_upstream; npm install; gulp; npm run pkg",
    "dist": "zip -r ./aura-explorer data/* public/* node_modules/* package.json"
  },
  "main": "public/index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/synle/aura_explorer.git"
  },
  "author": "Sy Le - lenguyensy@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/synle/aura_explorer/issues"
  },
  "window": {
    "title": "Aura Explorer",
    "toolbar": true,
    "frame": true,
    "width": 1000,
    "height": 800,
    "position": "mouse",
    "min_width": 800,
    "min_height": 600
  },
  "webkit": {
    "plugin": false
  },
  "homepage": "https://github.com/synle/aura_explorer",
  "dependencies": {
    "babel": "^6.1.18",
    "babel-cli": "^6.2.0",
    "body-parser": "~1.13.2",
    "bootstrap": "^3.3.5",
    "cheerio": "^0.19.0",
    "colors": "^1.1.2",
    "cookie-parser": "~1.3.5",
    "debug": "~2.2.0",
    "express": "~4.13.1",
    "hbs": "~3.1.0",
    "jquery": "^2.1.4",
    "lodash": "^3.10.0",
    "morgan": "~1.6.1",
    "mustache": "^2.2.0",
    "prompt": "^0.2.14",
    "q": "^1.4.1",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "redux": "^3.0.4",
    "serve-favicon": "~2.3.0",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.1.18",
    "babel-root-import": "^3.0.1"
  },
  "devDependencies": {
    "babel-core": "^6.2.1",
    "chai": "^3.4.1",
    "gulp": "^3.9.0",
    "gulp-babel": "^6.1.0",
    "gulp-concat": "^2.6.0",
    "gulp-footer": "^1.0.5",
    "gulp-header": "^1.7.1",
    "gulp-less": "^3.0.5",
    "gulp-minify": "0.0.5",
    "gulp-plumber": "^1.0.1",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-watch": "^4.3.5",
    "mocha": "^2.2.5"
  }
}
